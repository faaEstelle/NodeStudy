<div class="container">
    <div class="banner">
        <% if(userInfo._id){ %>
        <div class="logined">
            <% include fixNav.ejs %>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
            </span>
            </div>
            <div class="">
                <button class="btn btn-info">通知</button>
                <button class="btn btn-danger">个人</button>
            </div>
        </div>
        <% }else{
        %>
        <div class="no-login">
            <% include fixNav.ejs %>
            <div class="login-register">
                <button class="btn btn-info">登录</button>
                <button class="btn btn-danger">注册</button>
            </div>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
            </span>
            </div>
        </div>
        <%
        } %>
    </div>
    <!--瀑布流-->
    <div class="waterfall">
        <div class="item">
            <img src="/img/pic1.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic2.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic3.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic4.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic5.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic6.jpg">
            <p>1 convallis timestamp</p>
        </div>
        <div class="item">
            <img src="/img/pic7.jpg">
            <p>1 convallis timestamp</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
        </div>
        <div class="col-lg-4">
            <% if (userInfo._id){ %>
            <div class="loginSuccess">
                <% if (userInfo.IsAdmin){ %>
                <p><a href="/admin" target="_blank">管理我的博客</a></p>
                <% }else{ %>
                <p><span class="user"><%= userInfo.username %></span>，欢迎访问我的博客</p>
                <% } %>
                <a id="logOff">退出</a>
            </div>
            <% }else{ %>
            <div class="login">
                <input type="text" name="username">
                <input type="password" name="pwd">
                <button class="btn btn-default">登录</button>
                <p>没有账号？ <a>马上注册</a></p>
                <div class="Info"></div>
            </div>
            <div class="register">
                <input type="text" class="input-sm" name="username">
                <input type="password" name="pwd">
                <button class="btn btn-default">注册</button>
                <p>已有账号， <a>登录</a></p>
                <div class="Info"></div>
            </div>

            <% } %>
        </div>
    </div>
</div>